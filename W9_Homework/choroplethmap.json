{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Food Spending by States in 2019",
  "width": 820,
  "height": 420,
  "projection": {
    "type": "mercator",
    "center": [108.4, 4.5],   
    "scale": 2500         
  },
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#ccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jnewbery/CartogramMalaysia/master/public/data/malaysia-states.topojson",
        "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "properties.Name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/abbie0711/3179/main/food_spending.csv"
            },
            "key": "State",
            "fields": ["Food Spending (%)"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Food Spending (%)",
          "type": "quantitative",
          "title": "Food Spending (%)",
          "scale": {
          "scheme": "blues",
          "domain": [0, 30],  
          "nice": true
      },
        "legend": {
          "title": "Food Spending (%)",
          "direction": "horizontal",
          "orient": "bottom"
      }
    },
        "tooltip": [
          {"field": "properties.Name", "type": "nominal", "title": "State"},
          {"field": "Food Spending (%)", "type": "quantitative", "title": "Food Spending %"}
        ]
      }
    }
  ]
}
